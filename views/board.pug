extends layout

block content
  h1= title
  p rows is #{rows} and cols is #{cols}
  - let row=Number(rows)
  - let col=Number(cols)
  p rows is #{row} and cols is #{col}
  - if(!(Number.isInteger(row)) || !(Number.isInteger(col))) {
    p Passed arguments are not integers
  - }
  - else if(!(row >= 1 && row <= 10)) {
    p Range of row must be in 1 to 10
  - }
  - else if(!(col >= 1 && col <= 10)) {
    p Range of cols must be in 1 to 10
  - }
  - else{
    br
    h5 Displaying Table
    table#outer
      - for(let i = 0; i < row; i++){
          tr#middle
          - for(let j=0;j<col;j++){
              -if(i==j){
                td= (1) 
              -}                 
              - else if(i>j){
                td= (0)
              -}
              -else {
                td= (j-i+1)
              -}
          - }

      - }

  - }